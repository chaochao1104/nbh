<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<context:annotation-config/>
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:${application-file-rp}"/>
	</bean>
	<bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
	  	<property name="location" value="classpath:${application-file-rp}"/>
	</bean>
	<import resource="applicationContext-rp-jpa.xml"/>
	<!--  import resource="applicationContext-rp-dao.xml"/>
	<import resource="applicationContext-rp-service.xml"/>
	<import resource="applicationContext-rp-cxf.xml"/>-->
	
</beans>